<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Asset Manager Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      
      <VBox spacing="10.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         
         <Label text="Username:" />
         <TextField fx:id="usernameField" promptText="Enter username" />
         
         <Label text="Password:" />
         <PasswordField fx:id="passwordField" promptText="Enter password" />
         
         <HBox spacing="10.0" alignment="CENTER">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="80.0" />
            <Button fx:id="registerButton" text="Register" onAction="#handleRegister" prefWidth="80.0" />
         </HBox>
         
         <Label fx:id="messageLabel" textFill="RED" wrapText="true">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
      </VBox>
   </children>
</VBox>
