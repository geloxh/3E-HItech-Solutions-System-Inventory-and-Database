<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.MainController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" />
         </children>
      </HBox>
   </top>
   
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Assets">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button text="Add Asset" onAction="#handleAddAsset" />
                              <Button text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="assetsTable" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Usage Logs">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button text="Add Usage Log" onAction="#handleAddUsageLog" />
                              <Button text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="usageLogsTable" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Condition Logs">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button text="Add Condition Log" onAction="#handleAddConditionLog" />
                              <Button text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="conditionLogsTable" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Event Logs">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button text="Add Event Log" onAction="#handleAddEventLog" />
                              <Button text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="eventLogsTable" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Location Logs">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button text="Add Location Log" onAction="#handleAddLocationLog" />
                              <Button text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="locationLogsTable" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
